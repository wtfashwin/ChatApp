<div class="chat-container">
  <header class="chat-header">
    <h1><i class="fas fa-keyboard"></i> TalkIO</h1>
    <a id="leave-btn" class="btn">Leave Room</a>
  </header>

  <main class="chat-main">
    <div class="chat-sidebar">
      <h3><i class="fa fa-home" aria-hidden="true"></i> Room Name</h3>
      <h2 id="room-name"></h2>
      <h3><i class="fa fa-user" aria-hidden="true"></i> Users</h3>
      <ul id="users"></ul>
    </div>
    <div class="chat-messages"></div>
  </main>
  <div class="chat-form-container">
    <form id="chat-form">
      <input id="msg" type="text" placeholder="Enter Message" required autocomplete="off" />
      <button id='send' class="btn"><i class="fa fa-paper-plane" aria-hidden="true"></i>&nbsp;Send</button>
    </form>
  </div>
</div>

<body>
  <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"
    integrity="sha384-/KNQL8Nu5gCHLqwqfQjA689Hhoqgi2S84SNUxC3roTe4EhJ9AfLkp8QiQcU8AMzI"
    crossorigin="anonymous"></script>
